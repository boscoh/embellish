doctype xml
rss( 
    version="2.0", 
    xmlns:content="http://purl.org/rss/1.0/modules/content/" 
    xmlns:atom='http://www.w3.org/2005/Atom' )
    channel
        title= page.title
        link= site.url
        atom:link(
            href=site.url+"/rss" 
            rel="self" 
            type="application/rss+xml")/
        description
        each subpage in page.subpages
            item
                title= subpage.title
                description
                    |<![CDATA[
                    |!{subpage.content}
                    |]]>
                guid( isPermaLink="true" )= site.url + "/" +subpage.url
                pubDate= subpage.date