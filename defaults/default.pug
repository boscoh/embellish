doctype html
head
  meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
  style.
    body {
      background-color: white;
      width: 35em;
      margin: 0 auto;
      padding: 50px 20px 0px 20px;
      font-family: 'Helvetica Neue', sans-serif;
      letter-spacing: 0.1em;
      font-size: 14px;
      color: #000;
      line-height: 1.5em;
    }
    h1, h2, h3, h4, h5, h6, h7 {
      font-family: "Helvetica Neue";
      text-transform: uppercase;
      color: #333;
      font-size: 18px;
      letter-spacing: 0.05em;
      font-weight: 500;
      line-height: 1em;
      margin-bottom: 0;
      margin-top: 2em
    }
    h1 {
      font-size: 38px;
      letter-spacing: 0.2em;
      text-transform: uppercase;
      line-height: 1em;
      margin-top: 3em;
      margin-bottom: 1em
    }
    h2 {
      font-size: 28px;
      text-transform: none;
      line-height: 1em;
      margin-top: 3em;
      margin-bottom: 0em;
      border-bottom: 1px solid #999;
      padding-bottom: 0.2em;
    }
    .timestamp {
      margin-top: 6em;
      text-align: right;
      color: #999;
      border-top: 1px solid #CCC;
      font-size: 10px
    }
    .timestamp, .timestamp a:link, .timestamp a:visited {
      color: #888;
    }
    .timestamp a {
      text-decoration: underline;
    }
    blockquote {
      border-left: 5px solid #DDD;
      margin-left: 0;
      padding-left: 2em;
      color: #888;
    }
    code {
      padding: 0px 5px;
    }
    pre {
      margin: 0;
      padding: 0px 10px;
    }
    .codehilite {
      overflow: auto;
      padding: 7px 20px;
    }
    code, .codehilite {
      background-color: #F9F9FF;
      border: 1px solid #EEE;
      padding: 2px;
      border-radius: 5px;
      color: #333;
      font-size: 12px;
      line-height: 1.5em;
    }
    @media screen and (max-width: 650px) {
      body {
        width: auto;
        margin: 0;
      }
    }
    @media screen and (max-width: 550px) {
      body {
        padding-left: 20px;
        padding-right: 20px
      }
    }
body
  | !{page.content}
  .timestamp
    | generated by
    a(href='http://github.com/boscoh/embellish')
      embellish
    if (('category' in page) && (page.category))
      | in category: #{page.category},
    | on #{page.date}


